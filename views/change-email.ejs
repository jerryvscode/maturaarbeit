<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog</title>
    <!-- Import von CSS-Dateien -->
    <link rel="stylesheet" href="/general.css">
    <link rel="stylesheet" href="/header.css">
    <link rel="stylesheet" href="/dashboard.css">
  </head>
  
  <body>
    <!-- Header -->
    <%- include("includes/header") %>

    <main>
      <div class="dashboard-div">
        <!-- Errormeldungen -->
        <div class="error-div">
          <% errors.forEach(error => { %>
            <p class="notice"><%= errors %></p>
          <% }) %>
        </div>
        <!-- Emailänderungseingabe -->
        <form action="/change-email" method="POST">
          <input class="change-email-input" id="newemail" name="newemail" placeholder="Neue Emailadresse...">
          <button class="dashboard-buttons">Email ändern</button>
        </form>
      </div>
    </main>

    <!-- Footer -->
    <%- include("includes/footer") %>
  </body>
</html>